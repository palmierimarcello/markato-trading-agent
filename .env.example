# ====================================
# TRADING AGENT - Environment Variables
# ====================================

# ------------------
# Database PostgreSQL
# ------------------
POSTGRES_DB=trading_db
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=your_secure_password_here

# Database URL completo (usato dall'app Python)
# Formato: postgresql://user:password@host:port/database
# Se usi docker-compose, l'host è "postgres", altrimenti usa IP/hostname
DATABASE_URL=postgresql://trading_user:your_secure_password_here@postgres:5432/trading_db

# ------------------
# Hyperliquid Exchange
# ------------------
# La tua chiave privata Ethereum (senza 0x prefix)
PRIVATE_KEY=your_ethereum_private_key_here

# Il tuo indirizzo wallet Ethereum
WALLET_ADDRESS=0xYourEthereumAddressHere

# ------------------
# OpenAI API
# ------------------
# API Key per GPT-5.1 o altri modelli OpenAI
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# ------------------
# CoinMarketCap API
# ------------------
# API Key per Fear & Greed Index
CMC_PRO_API_KEY=your_coinmarketcap_api_key_here

# ------------------
# Configurazioni Opzionali
# ------------------
# Modalità testnet (true/false) - modifica nel codice main.py
# TESTNET=true

# Porta per Web API (se implementata)
# API_PORT=8000
